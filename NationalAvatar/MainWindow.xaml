<Window x:Class="NationalAvatar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NationalAvatar"
        mc:Ignorable="d"
        Title="MainWindow" Height="410" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="180" />
        </Grid.ColumnDefinitions>
        <Image Name="LiveImage" Width="256" Height="256" MouseLeftButtonUp="LiveImage_MouseLeftButtonUp">
            <Image.ToolTip>
                <TextBlock>点击图像保存文件</TextBlock>
            </Image.ToolTip>
        </Image>
        <StackPanel Grid.Column="1">
            <Button Click="Button_Click">选择头像</Button>
            <ListBox SelectionMode="Single" Height="300" ItemsSource="{Binding Templates}" SelectedIndex="0"  SelectionChanged="ListBox_SelectionChanged" >
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="local:AvatarTemplate">
                        <Image HorizontalAlignment="Center" Source="{Binding Path}" Height="64" Width="64" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
